<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

    <ImageView
        android:id="@+id/id_iv_tag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="6dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/id_iv_tag">

        <TextView
            android:id="@+id/id_tv_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="php"
            android:textColor="@color/app_theme_color"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/id_tv_tag_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/id_tv_tag_name"
            android:textColor="@color/text_second_color"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/id_tv_tag_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/id_tv_tag_desc"
            android:textColor="@color/text_second_color"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/id_tv_tag_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_tv_tag_name"
            android:textColor="@color/text_first_color"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>


    </RelativeLayout>


</RelativeLayout>