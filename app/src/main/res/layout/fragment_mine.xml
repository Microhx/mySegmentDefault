<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_bg_color"
              android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/app_name"
            app:titleTextColor="@color/white_color"/>

    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#EFEEF0"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0.0dip"
        app:cardElevation="2.0dip">

        <LinearLayout
            android:id="@+id/id_layout_userinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/id_iv_user_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"/>

            <TextView
                android:id="@+id/id_tv_user_name"
                style="@style/mine_fragment_tv_style"
                android:layout_marginLeft="12dp"
                android:textSize="18sp"
                android:text="@string/str_login_register"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="0.0dip"
        app:cardElevation="2.0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_tv_message"
                style="@style/mine_fragment_tv_style"
                android:text="@string/str_min_message"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/activity_bg_color"/>

            <TextView
                android:id="@+id/iv_tv_private_event"
                style="@style/mine_fragment_tv_style"
                android:text="@string/str_min_secret"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="0.0dip"
        app:cardElevation="2.0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_tv_attention"
                style="@style/mine_fragment_tv_style"
                android:text="@string/str_min_attention"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/activity_bg_color"/>

            <TextView
                android:id="@+id/id_tv_collection"
                style="@style/mine_fragment_tv_style"
                android:text="@string/str_min_collection"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/id_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="0.0dip"
        app:cardElevation="2.0dip">

        <TextView
            style="@style/mine_fragment_tv_style"
            android:text="@string/str_min_setting"
            />

    </android.support.v7.widget.CardView>


</LinearLayout>