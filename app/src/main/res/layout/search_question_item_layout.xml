<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

    <TextView
        android:id="@+id/id_tv_answer_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_alignParentRight="true"
        android:text="10"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/id_tv_answer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/id_tv_answer_count"
        android:text="java官方"
        android:textColor="@color/text_first_color"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/id_tag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_answer_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_second_color"
        android:textSize="10sp"
        />


</RelativeLayout>