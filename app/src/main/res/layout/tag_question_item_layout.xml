<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:orientation="vertical"
                android:padding="12dp">

    <TextView
        android:id="@+id/id_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:lines="2"
        android:textColor="@color/text_first_color"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/id_tv_answer"
        android:layout_width="36dp"
        android:gravity="center"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:background="@color/app_theme_color"
        android:layout_height="36dp"/>

    <LinearLayout
        android:id="@+id/id_tag_layout"
        android:layout_width="wrap_content"
        android:layout_below="@id/id_tv_title"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/id_tv_publish_time"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/id_tag_layout"
        android:textSize="10sp"
        android:textColor="@color/text_third_color"
        android:layout_height="wrap_content"/>


</RelativeLayout>