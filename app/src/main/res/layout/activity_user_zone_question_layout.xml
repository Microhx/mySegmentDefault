<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:orientation="vertical"
                android:padding="16dp">

    <TextView
        android:id="@+id/id_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="48dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/text_first_color"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/id_tv_answer"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/id_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_title"
        android:layout_marginRight="48dp"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:visibility="gone"
        android:textColor="@color/text_second_color"
        />

    <TextView
        android:id="@+id/id_tv_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textColor="@color/text_third_color"
        android:textSize="10sp"/>




</RelativeLayout>