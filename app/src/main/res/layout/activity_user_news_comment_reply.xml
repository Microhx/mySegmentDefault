<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.micro.mysegmentdefault.view.widget.PublicHeadLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pub_ri_resource="@drawable/ic_submit"
        app:pub_ri_visible="true"
        app:pub_title="@string/str_comment"/>

    <EditText
        android:id="@+id/id_et_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="@color/text_first_color"
        android:textStyle="bold"
        android:background="@null"
        android:gravity="left|top"/>


</LinearLayout>