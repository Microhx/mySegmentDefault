<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

    <TextView
        android:id="@+id/id_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="08-12 12:34"
        android:textColor="@color/text_third_color"
        android:textSize="10sp"/>

    <com.micro.mysegmentdefault.view.widget.CircleImageView
        android:id="@+id/id_iv_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/id_tv_time"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/id_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:layout_below="@id/id_tv_time"
        android:textColor="@color/white_color"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/id_iv_icon"
        android:layout_marginLeft="4dp"
        android:background="@drawable/bg_chat_target"/>


</RelativeLayout>