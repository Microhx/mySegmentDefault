<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.micro.mysegmentdefault.view.widget.PublicHeadLayout
        android:id="@+id/id_layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pub_title="@string/str_comment"
        app:pub_tv_txt="@string/str_commit"/>

    <EditText
        android:id="@+id/id_et_content"
        android:layout_width="match_parent"
        android:gravity="start|left|top"
        android:background="@null"
        android:textColor="@color/text_first_color"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_height="match_parent"/>


</LinearLayout>