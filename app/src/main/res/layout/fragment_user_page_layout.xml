<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_user_personal_website"
                    android:textColor="@color/text_first_color"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/id_tv_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:hint="@string/str_user_no_website"
                    android:maxLines="3"
                    android:textColor="@color/text_second_color"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/str_user_personal_introduce"
                    android:textColor="@color/text_first_color"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/id_tv_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:hint="@string/str_user_no_introduce"
                    android:maxLines="3"
                    android:textColor="@color/text_second_color"
                    android:textSize="10sp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/id_card_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardElevation="2dp">

            <TextView
                android:id="@+id/id_tv_trend"
                style="@style/user_page_fragment_list"
                android:padding="12dp"
                android:text="@string/str_trend"/>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/id_layout_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/id_tv_user_question"
                        style="@style/user_page_fragment_list"
                        android:text="@string/str_user_question"/>

                    <TextView
                        android:id="@+id/id_tv_question"
                        style="@style/user_page_fragment_list_number"/>

                </RelativeLayout>

                <View
                    style="@style/custom_line"/>

                <RelativeLayout
                    android:id="@+id/id_layout_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/id_tv_user_answer"
                        style="@style/user_page_fragment_list"
                        android:text="@string/str_user_answer"/>

                    <TextView
                        android:id="@+id/id_tv_answer"
                        style="@style/user_page_fragment_list_number"/>

                </RelativeLayout>

                <View
                    style="@style/custom_line"/>

                <RelativeLayout
                    android:id="@+id/id_layout_article"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/id_tv_user_article"
                        style="@style/user_page_fragment_list"
                        android:text="@string/str_user_article"/>

                    <TextView
                        android:id="@+id/id_tv_article"
                        style="@style/user_page_fragment_list_number"/>

                </RelativeLayout>

                <View
                    style="@style/custom_line"/>

                <RelativeLayout
                    android:id="@+id/id_layout_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/id_tv_user_share"
                        style="@style/user_page_fragment_list"
                        android:text="@string/str_user_share"/>

                    <TextView
                        android:id="@+id/id_tv_share"
                        style="@style/user_page_fragment_list_number"/>

                </RelativeLayout>

                <View
                    style="@style/custom_line"/>

                <RelativeLayout
                    android:id="@+id/id_layout_collect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/id_tv_user_collection"
                        style="@style/user_page_fragment_list"
                        android:text="@string/str_user_collection"/>

                    <TextView
                        android:id="@+id/id_tv_collection"
                        style="@style/user_page_fragment_list_number"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/str_active_tags"
            android:textSize="12sp"/>

        <com.micro.mysegmentdefault.view.widget.TagContainerLayout
            android:id="@+id/id_layout_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:padding="12dp"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>