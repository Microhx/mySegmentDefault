<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:orientation="vertical"
                android:padding="12dp">

    <TextView
        android:id="@+id/id_tv_attention_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="关注2222"
        android:textColor="@color/text_third_color"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/id_tv_tag_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/id_tv_attention_count"
        android:text="JavaScript"
        android:textColor="@color/text_first_color"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/id_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_below="@id/id_tv_tag_name"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_second_color"
        android:textSize="15sp"
        />

</RelativeLayout>