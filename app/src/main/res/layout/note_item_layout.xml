<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:orientation="vertical"
                android:padding="12dp">


    <com.micro.mysegmentdefault.view.widget.CircleImageView
        android:id="@+id/id_iv_user_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/id_tv_username"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/id_iv_user_icon"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingLeft="4dp"
        android:textColor="@color/app_theme_color"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/id_tv_qus_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_iv_user_icon"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_first_color"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/id_tv_qus_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_qus_title"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        android:textColor="@color/text_second_color"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/id_tv_qus_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_qus_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_third_color"
        android:textSize="10sp"/>


    <TextView
        android:id="@+id/id_tv_qus_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/id_tv_qus_comment"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_second_color"
        android:textSize="10sp"/>


</RelativeLayout>