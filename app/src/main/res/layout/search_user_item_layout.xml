<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

    <ImageView
        android:id="@+id/id_iv_user_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/id_iv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/id_iv_user_icon"
        android:layout_toRightOf="@id/id_iv_user_icon"
        android:lines="1"
        android:textColor="@color/text_first_color"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/id_tv_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/id_iv_user_name"
        android:layout_toEndOf="@id/id_iv_user_name"
        android:layout_toRightOf="@id/id_iv_user_name"
        android:lines="1"
        android:textColor="@color/text_second_color"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_iv_user_name"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/id_tv_rank"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/id_iv_user_icon"
        android:layout_toRightOf="@id/id_iv_user_icon"
        android:textColor="@color/text_second_color"
        android:textSize="16sp"/>


</RelativeLayout>