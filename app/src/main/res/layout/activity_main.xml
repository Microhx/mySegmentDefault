<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.micro.mysegmentdefault.MainActivity">

    <FrameLayout
        android:id="@+id/id_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFF"
        android:orientation="vertical"
        app:layout_behavior="@string/bottom_navigator_behavior">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/appbar_line_invert"/>

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?selectableItemBackground"
            android:padding="8dp"
            app:tl_iconHeight="24dp"
            app:tl_iconWidth="24dp"
            app:tl_indicator_color="@color/app_theme_color"
            app:tl_indicator_height="0dp"
            app:tl_textSelectColor="@color/app_theme_color"
            app:tl_textUnselectColor="@color/text_second_color"
            app:tl_textsize="14sp"
            app:tl_underline_height="0dp"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
